@model TaskDetail


<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Add Task</h2>
    </div>

    <form method="post">
        <div asp-validation-summary="All"></div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Name">Task Name</label>
                <input type="text" class="form-control mb-3" asp-for="Name" placeholder="Enter Name">
                <span asp-validation-for="Name" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Description">Description</label>
                <input type="text" class="form-control mb-3" asp-for="Description" placeholder="Enter Description">
                <span asp-validation-for="Description" class=" alert-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Deadline">Deadline</label>
                <input type="text" class="form-control mb-3" asp-for="Deadline" placeholder="Enter Deadline">
                <span asp-validation-for="Deadline" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6 mb-3">
                <label asp-for="Status">Status</label>
                <input type="text" class="form-control mb-3" asp-for="Status" placeholder="Enter Status">
                <span asp-validation-for="Status" class=" alert-danger"></span>
            </div>
        </div>


        <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Save</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-lg btn-warning p-2">Back To List</a>
    </form>

</div>


