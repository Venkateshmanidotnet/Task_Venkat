@model IEnumerable<Task_Venkat.Models.TaskDetail>
@{
    ViewBag.Title = "Index";
}
@if (TempData["ResultOk"] != null)
{
    <h1 class="alert-success">@TempData["ResultOk"]</h1>
}
<h2>List of Task</h2>
<div class="col mb-3">
    <a asp-controller="Home" asp-action="Create" class="btn btn-lg btn-primary"><i class="bi bi-file-plus-fill"></i>Add Task</a>
</div>
<table class="table table-bordered">
    <thead>
        <tr>

            <th>@Html.DisplayNameFor(m => m.Deadline)</th>
            <th>@Html.DisplayNameFor(m => m.Description)</th>
            <th>@Html.DisplayNameFor(m => m.Name)</th>
            <th>@Html.DisplayNameFor(m => m.Status)</th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>@item.Deadline</td>
                <td>@item.Description</td>
                <td>@item.Name</td>
                <td>@item.Status</td>
                <td>
                    <div role="group" class="w-60 btn-group">
                        <a asp-controller="Home" asp-action="Edit" asp-route-id="@item.TaskId" class=" btn btn-sm btn-primary"><i class="bi bi-pencil-square"></i>Edit</a>&nbsp;
                        <a asp-controller="Home" asp-action="Delete" asp-route-id="@item.TaskId" class="btn btn-sm btn-danger"><i class="bi bi-trash-fill"></i>Delete</a>
                    </div>
                    </td>
            </tr>
        }
    </tbody>
</table>   